<div class="text-left mt-15">
    <h3>Lets edit your note!</h3>
</div>

<form method="POST" action="/notes/edit/<%=notes._id%>">
    <div id="form-group">
        <label>Title:</label><input class="form-control" name="title" type="text" value="<%= notes.title %>" />
    </div>

    <div id="form-group">
            <label>Subject:</label><input class="form-control" name="subject" type="text" value="<%= notes.subject %>" />
    </div>

    <div id="form-group">
            <label>Text:</label><textarea rows="10" class="form-control" name="text" type="text"><%= notes.text %></textarea>
    </div>
    <br>
    <input class="btn-sbmt" type="submit" value="Submit" />
</form>